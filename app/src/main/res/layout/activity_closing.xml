<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">


    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="412dp"
        android:layout_height="98dp"
        android:layout_marginTop="4dp"
        android:background="#F48FB1"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/logo_image3"
            android:layout_width="131dp"
            android:layout_height="98dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/logo_toko"
            android:scaleType="centerInside"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/store_name"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:text="@string/store_name"
            android:textColor="#980003"
            android:textSize="25sp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/text_thank_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/thank_you"
        android:textColor="#B71C1C"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_container" />

    <ImageView
        android:id="@+id/image_delivery"
        android:layout_width="192dp"
        android:layout_height="229dp"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/delivery_boy_desc"
        android:src="@drawable/delivery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_thank_you" />

    <TextView
        android:id="@+id/text_contact_info"
        android:layout_width="310dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:text="@string/contact_info"
        android:textColor="#B71C1C"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_delivery" />

    <LinearLayout
        android:id="@+id/bottomNav4"
        android:layout_width="305dp"
        android:layout_height="55dp"
        android:layout_marginBottom="4dp"
        android:background="#FF7D91"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Empty View to act as a spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Spacer between icons -->
        <ImageView
            android:id="@+id/home_image_view4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/home_content_description"
            android:src="@drawable/rumah" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/profile_image_view4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/profile_content_description"
            android:src="@drawable/account_circle" />

        <!-- Empty View to act as a spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>